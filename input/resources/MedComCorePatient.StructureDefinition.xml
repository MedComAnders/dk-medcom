<?xml version="1.0" encoding="utf-8"?>
<StructureDefinition xmlns="http://hl7.org/fhir">
  <id value="medcom-core-patient" />
  <url value="http://medcom.dk/fhir/medcom-core/StructureDefinition/medcom-core-patient" />
  <version value="1.0.0" />
  <name value="MedComCorePatient" />
  <status value="draft" />
  <fhirVersion value="4.0.1" />
  <kind value="resource" />
  <abstract value="false" />
  <type value="Patient" />
  <baseDefinition value="http://hl7.org/fhir/StructureDefinition/Patient" />
  <derivation value="constraint" />
  <differential>
    <element id="Patient">
      <path value="Patient" />
      <constraint>
        <key value="marital-status-unknown-usage" />
        <requirements value="Marital status is legally unknown in Denmark" />
        <severity value="warning" />
        <human value="Status in maritalStatus is unknown in a danish context. Consider mapping the value to UNK" />
        <expression value="maritalStatus.coding.where(code = 'P' and system = 'http://terminology.hl7.org/CodeSystem/v3-MaritalStatus').empty() or maritalStatus.coding.where(code = 'A' and system = 'http://terminology.hl7.org/CodeSystem/v3-MaritalStatus').empty()" />
      </constraint>
    </element>
    <element id="Patient.identifier">
      <path value="Patient.identifier" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="system" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <min value="1" />
    </element>
    <element id="Patient.identifier:cpr">
      <path value="Patient.identifier" />
      <sliceName value="cpr" />
      <short value="Official Danish CRN number" />
      <definition value="Official Danish CRN number (CPR) issued by the Danish Civil Registration System" />
      <min value="1" />
      <max value="1" />
      <type>
        <code value="Identifier" />
        <profile value="http://hl7.dk/fhir/core/StructureDefinition/dk-core-crn-identifier" />
      </type>
    </element>
    <element id="Patient.name">
      <path value="Patient.name" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="use" />
        </discriminator>
        <rules value="open" />
      </slicing>
      <comment value="A patient may have multiple names with different uses or applicable periods." />
      <min value="1" />
    </element>
    <element id="Patient.name:official">
      <path value="Patient.name" />
      <sliceName value="official" />
      <max value="1" />
    </element>
    <element id="Patient.name:official.use">
      <path value="Patient.name.use" />
      <fixedCode value="official" />
    </element>
    <element id="Patient.name:official.family">
      <path value="Patient.name.family" />
      <min value="1" />
    </element>
    <element id="Patient.name:official.given">
      <path value="Patient.name.given" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.telecom">
      <path value="Patient.telecom" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.address">
      <path value="Patient.address" />
      <definition value="An address for the individual. Danish addresses must comply with directions issued by https://dawa.aws.dk/ and underlying authorities" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.address.line">
      <path value="Patient.address.line" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.address.city">
      <path value="Patient.address.city" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.address.postalCode">
      <path value="Patient.address.postalCode" />
      <mustSupport value="true" />
    </element>
    <element id="Patient.maritalStatus.coding.code">
      <path value="Patient.maritalStatus.coding.code" />
      <binding>
        <strength value="preferred" />
        <valueSet value="http://hl7.dk/fhir/ValueSet/dk-marital-status" />
      </binding>
    </element>
    <element id="Patient.generalPractitioner">
      <path value="Patient.generalPractitioner" />
      <slicing>
        <discriminator>
          <type value="value" />
          <path value="identifier.system" />
        </discriminator>
        <rules value="open" />
      </slicing>
    </element>
    <element id="Patient.generalPractitioner:referencedSORUnit">
      <path value="Patient.generalPractitioner" />
      <sliceName value="referencedSORUnit" />
    </element>
    <element id="Patient.generalPractitioner:referencedSORUnit.identifier">
      <path value="Patient.generalPractitioner.identifier" />
      <type>
        <code value="Identifier" />
        <profile value="http://hl7.dk/fhir/core/StructureDefinition/dk-core-sor-identifier" />
      </type>
    </element>
    <element id="Patient.managingOrganization">
      <path value="Patient.managingOrganization" />
      <min value="1" />
      <type>
        <code value="Reference" />
        <targetProfile value="http://medcom.dk/fhir/medcom-core/StructureDefinition/medcom-core-organization" />
        <aggregation value="bundled" />
      </type>
    </element>
  </differential>
</StructureDefinition>